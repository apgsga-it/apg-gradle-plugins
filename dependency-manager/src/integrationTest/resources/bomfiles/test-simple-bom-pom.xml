<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>parentpom</artifactId>
        <groupId>com.affichage.common.maven</groupId>
        <version>9.0.6.ADMIN-UIMIG-SNAPSHOT</version>
    </parent>
    <artifactId>dm-bom</artifactId>
    <packaging>pom</packaging>
    <name>_dm_bom</name>
    <description>This is a "Bill of material" pom, which specifies the version of
        all artefacts used in Apg projects. The versions for the by Apg buildt
        artefacts are the default SNAPSHOT Versions used for deveolpment
    </description>

    <developers>
        <developer>
            <id>che</id>
            <name>Christoph Henrici</name>
            <email>christoph.henrici@apg.ch</email>
            <organization>apg.ch</organization>
            <roles>
                <role>Entwickler</role>
            </roles>
            <timezone>0</timezone>
        </developer>
    </developers>

    <distributionManagement>
        <repository>
            <id>releases</id>
            <url>
                http://artifactory4t4apgsga.jfrog.io/artifactory4t4apgsga/releases/
            </url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <url>
                http://artifactory4t4apgsga.jfrog.io/artifactory4t4apgsga/snapshots
            </url>
        </snapshotRepository>
        <site>
            <id>site</id>
            <url>
                file:///var/continuum/mavensites/com.affichage.common.maven.parentpom
            </url>
        </site>
    </distributionManagement>

    <properties>
        <!-- General Version Properties relevent for in-house development -->
        <branch.version>9.0.6.ADMIN-UIMIG-SNAPSHOT</branch.version>
        <apg-forms2java-framework.version>1.9.6</apg-forms2java-framework.version>

        <!-- External Libraries Version Properties -->

        <httpclient.version>4.5.2</httpclient.version>
        <guice.version>4.1</guice.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.httpcomponents</groupId>
                <artifactId>httpclient</artifactId>
                <version>${httpclient.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.code.guice</groupId>
                <artifactId>guice</artifactId>
                <version>${guice.version}</version>
            </dependency>
            <dependency>
                <groupId>com.affichage.ui.utils</groupId>
                <artifactId>jgoodies-utils</artifactId>
                <version>${apg-forms2java-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.affichage.it21.ppix</groupId>
                <artifactId>ppix-dao</artifactId>
                <version>${branch.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>
